@using TravelTripProject.Models.Entities
@model List<Blog>
<div class="box1-left">
    @foreach (var x in Model)
    {
        <div class="bot-img">
            <a href="/Blog/BlogDetail/@x.ID"> <img src="@x.BlogImage" alt="" style="width:140px;height:80px;" /> </a>
        </div>
        <div class="bot-desc">
            <p>@x.Definition.Substring(0, x.Definition.Substring(0, 50).LastIndexOf(" "))</p>
        </div>
        <div class="clear"></div>

    }
    <div class="clear"></div>
</div>

